<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>Cinema</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
<!-- 드라이버 이름 -->
<context-param>
	<param-name>OracleDriver</param-name>
	<param-value>oracle.jdbc.OracleDriver</param-value>
</context-param>

<!-- 접속 url -->
<context-param>
	<param-name>OracleUrl</param-name>
	<param-value>jdbc:oracle:thin:@localhost:1521:xe</param-value>
</context-param>

<!-- 계정ID -->
<context-param>
	<param-name>OracleId</param-name>
	<param-value>cinema</param-value>
</context-param>

<!-- 계정PW -->
<context-param>
	<param-name>OraclePw</param-name>
	<param-value>1234</param-value>
</context-param>

<!-- 한 페이지당 들어갈 포스트 수: 상수라서 대문자 -->
<context-param>
	<param-name>POSTS_PER_PAGE</param-name>
	<param-value>16</param-value>
</context-param>

<!-- 한 블럭당 들어갈 페이지 수 -->
<context-param>
	<param-name>PAGES_PER_BLOCK</param-name>
	<param-value>4</param-value>
</context-param>


 <servlet>
	<servlet-name>MovieList</servlet-name>
	<servlet-class>model.MovieListController</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>MovieList</servlet-name>
	<url-pattern>/model/movieList.do</url-pattern>
</servlet-mapping>


</web-app>
